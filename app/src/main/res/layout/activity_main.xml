<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/activity_main_images"
        android:layout_width="2000dp"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true" />

    <TextView android:id="@+id/activity_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_images"
        android:textSize="25dp"
        android:textStyle="bold|italic"
        android:layout_centerInParent="true" />

    <SeekBar
        android:id="@+id/seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_main_text"
        android:layout_centerInParent="true"/>


        <ImageView
            android:id="@+id/activity_main_rewind"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/seek"
            android:layout_alignParentLeft="true"
            android:src="@drawable/rewind" />

        <ImageView
            android:id="@+id/activity_main_pause"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/seek"
            android:layout_toRightOf="@+id/activity_main_rewind"
            android:layout_toLeftOf="@+id/activity_main_stop"
            android:src="@drawable/pause" />

        <ImageView
            android:id="@+id/activity_main_stop"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/seek"
            android:layout_centerHorizontal="true"
            android:src="@drawable/stop" />

        <ImageView
            android:id="@+id/activity_main_play"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/seek"
            android:layout_toRightOf="@id/activity_main_stop"
            android:layout_toLeftOf="@+id/activity_main_forward"
            android:src="@drawable/play" />

        <ImageView
            android:id="@+id/activity_main_forward"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/seek"
            android:layout_alignParentRight="true"
            android:src="@drawable/forward" />

        <ImageView
            android:id="@+id/activity_main_decrease_volume"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/activity_main_rewind"
            android:layout_alignParentLeft="true"
            android:src="@drawable/decrease_volume" />

        <ImageView
            android:id="@+id/activity_main_increase_volume"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_below="@+id/activity_main_forward"
            android:layout_alignParentRight="true"
            android:src="@drawable/increase_volume" />

</RelativeLayout>
